{
  "parser": "@typescript-eslint/parser",

  "extends": "eslint:recommended",

  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },

  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "jsx-quotes": ["warn", "prefer-single"]
  }
}
