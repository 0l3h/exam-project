{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "eol-last": ["error", "always"],
    "indent": [
      "error",
      2,
      {
        "MemberExpression": 1
      }
    ],
    "no-multiple-empty-lines": ["warn"],
    "no-new-symbol": "error",
    "no-trailing-spaces": ["warn"],
    "no-undef": ["warn"],
    "no-unused-vars": ["warn"],
    "object-curly-spacing": ["warn", "always"],
    "object-shorthand": "error",
    "prefer-const": 2,
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "space-in-parens": ["warn", "never"],
    "strict": [2, "never"]
  }
}
